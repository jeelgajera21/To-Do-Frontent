@model IEnumerable<ReminderModel>

<main>
    <div class="container container-fluid pt-3">
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <h5 class="col">Reminders</h5>
                        <div class="text-end col">
                            <a asp-controller="Reminder" asp-action="AddReminder">
                                <button class="btn btn-primary mb-3">
                                    <i class="bi bi-plus-lg"></i>&nbsp;Add Reminder
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="mb-3">
                <input type="text" class="form-control" id="Search" placeholder="Search Reminders">
            </div>

            <!-- Reminders Table -->
            <table class="table table-hover table-header-fixed">
                <thead>
                    <tr>
                        <th scope="col">Reminder ID</th>
                        <th scope="col">Task ID</th>
                        <th scope="col">Reminder Time</th>
                        <th scope="col">Is Sent</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="Table">
                    @foreach (var reminder in Model)
                    {
                        <tr>
                            <td>@reminder.ReminderID</td>
                            <td>@reminder.TaskID</td>
                            <td>@reminder.ReminderTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(reminder.IsSent ? "Yes" : "No")</td>
                            <td class="text-center">
                                <div class="row">
                                    <!-- Edit Button -->
                                    <a class="btn btn-outline-success btn-xs me-2 col"
                                       asp-controller="Reminder" asp-action="AddReminder"
                                       asp-route-ReminderID="@reminder.ReminderID">
                                        Edit
                                    </a>

                                    <!-- Delete Button -->
                                    <a class="btn btn-outline-danger btn-xs col"
                                       asp-controller="Reminder" asp-action="Delete"
                                       asp-route-ReminderID="@reminder.ReminderID"
                                       onclick="return confirm('Are you sure you want to delete this reminder?');">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>

    <script>
        $(document).ready(function () {
            $("#Search").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#Table tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>

</main>
